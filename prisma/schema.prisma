datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  DEVELOPER
  TECHNIC
  REPORTER
  CAKRU
  KRU
  MUSIC
}

model User {
  id        String         @id @default(auto()) @map("_id") @db.ObjectId
  name      String?
  email     String?        @unique
  emailVerified DateTime?
  image     String?
  role      String         @default("CAKRU")
  createdAt DateTime       @default(now())
  authored  AuthorOnPost[]
  accounts  Account[]
  sessions  Session[]
  podcasts  Podcast[]
}

model BlogPost {
  id          String         @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  slug        String         @unique
  content     String
  description String?
  readTime    String?
  category    String?
  mainImage   String?
  tags        String[]
  isFeatured  Boolean        @default(false)
  authors     AuthorOnPost[]
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
}

model AuthorOnPost {
  id     String   @id @default(auto()) @map("_id") @db.ObjectId
  user   User     @relation(fields: [userId], references: [id])
  userId String   @db.ObjectId
  post   BlogPost @relation(fields: [postId], references: [id])
  postId String   @db.ObjectId
}


model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.String
  access_token      String? @db.String
  expires_at        Int?    @db.Int
  token_type        String? @db.String
  scope             String? @db.String
  id_token          String? @db.String
  session_state     String? @db.String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String   @unique
  expires    DateTime

  @@index([identifier], map: "token_identifier_index")
}

model WhitelistedEmail {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  createdAt DateTime @default(now())
}

model Podcast {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  subtitle    String?
  description String
  date        String?
  duration    String?
  audioUrl    String
  image       String?
  coverImage  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  author      User     @relation(fields: [authorId], references: [id])
  authorId    String
}

model PlayerConfig {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  subtitle  String?
  coverImage String?
  coverImages String[] // semua cover image yang pernah diupload
  updatedAt DateTime @updatedAt
}

model StreamConfig {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  baseUrls   String[]
  defaultUrl String
  fallbackUrl String
  onAir      Boolean  @default(true)
  updatedAt  DateTime @updatedAt
}

model TuneTrackerEntry {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  order      Int      // 1-10, chart position
  title      String
  artist     String
  coverImage String?  // R2 URL
  audioUrl   String?  // R2 URL
  updatedAt  DateTime @updatedAt
}

model ProgramVideo {
  id          String   @id @default(cuid()) @map("_id")
  title       String
  link        String
  thumbnail   String
  thumbnailKey String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
